<UserControl x:Class="Rubberduck.UI.CodePane.RDCodePane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:local="clr-namespace:Rubberduck.UI.CodePane"
             xmlns:controls="clr-namespace:Rubberduck.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <controls:BindableTextEditor 
            Grid.Column="0" Grid.Row="0"
            FontFamily="Courier New "
            ShowLineNumbers="False"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto"
            IsReadOnly="False"
            Text="{Binding Content,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
        <StatusBar Grid.Column="0" Grid.Row="1">
            <Label Padding="0">A real status bar at last</Label>
        </StatusBar>
    </Grid>
</UserControl>
